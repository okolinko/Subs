                    <resource id="Toppik_Subscriptions::subscriptions_settings" title="Settings" translate="title">
                        <resource id="Toppik_Subscriptions::subscriptions_settings_general" title="General"
                                  translate="title"/>
                        <resource id="Toppik_Subscriptions::subscriptions_settings_periods" title="Periods"
                                  translate="title"/>
                        <resource id="Toppik_Subscriptions::subscriptions_settings_units" title="Units"
                                  translate="title"/>
