<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Toppik_Subscriptions::subscriptions" title="Subscriptions" translate="title">
                    <resource id="Toppik_Subscriptions::subscriptions_management" title="Management" translate="title">
                        <resource id="Toppik_Subscriptions::subscriptions_management_change_sku" title="Change SKU" translate="title" />
                        <resource id="Toppik_Subscriptions::subscriptions_management_save_points" title="Save Points" translate="title" />
