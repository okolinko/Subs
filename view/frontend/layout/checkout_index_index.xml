<!-- TODO remove this file as soon as enhanced checkout is implemented -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="subscription_subtotal" xsi:type="array">
                                                            <item name="component" xsi:type="string">Toppik_Subscriptions/js/view/checkout/summary/subscription_subtotal</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string">Subscription Subtotal</item>
                                                                <item name="template" xsi:type="string">Toppik_Subscriptions/checkout/summary/subscription_subtotal</item>
                                                            </item>
                                                        </item>
                                                        <item name="subscription_charges_breakdown" xsi:type="array">
                                                            <item name="component" xsi:type="string">Toppik_Subscriptions/js/view/checkout/summary/subscription_charges_breakdown</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string">Charges Breakdown</item>
                                                                <item name="template" xsi:type="string">Toppik_Subscriptions/checkout/summary/subscription_charges_breakdown</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>